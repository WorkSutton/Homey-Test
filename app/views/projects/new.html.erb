<h1>New Project</h1>

<%= simple_form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.input :title, autocomplete: "title", placeholder: "100 Lochabar Road, London, SE12 0JB" %>
  <%= f.input :description, autocomplete: "description", placeholder: "Enter a brief project description" %>
  <div>
    <%= f.button :submit, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>